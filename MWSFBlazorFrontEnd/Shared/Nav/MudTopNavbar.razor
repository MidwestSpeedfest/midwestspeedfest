<MudAppBar Elevation="1">
    <MudIconButton Icon="@(_drawerOpen ? Icons.Material.Filled.MenuOpen : Icons.Material.Filled.Menu)" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
    <MudSpacer />
    <MudLink Href="#">
        <MudText Typo="Typo.h5" Class="text-white">Midwest Speedfest</MudText>
    </MudLink>
    @*<a href="#" class="h5">
        <MudText Typo="Typo.h5">Midwest Speedfest</MudText>
    </a>*@
    <MudSpacer />
    <span class="ml-auto">
        <SocialMediaIcons />
    </span>
</MudAppBar>


@code {

    [Parameter]
    public EventCallback<bool> OnDrawerToggle { get; set; }

    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
        ReturnDrawerState();
    }

    private void ReturnDrawerState()
    {
        OnDrawerToggle.InvokeAsync(_drawerOpen);
    }

}