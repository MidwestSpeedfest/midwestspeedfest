<MudAppBar>
    <MudIconButton Icon="@(_drawerOpen ? Icons.Material.Filled.MenuOpen : Icons.Material.Filled.Menu)" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
    <MudSpacer />
    @*<MudLink Href="#">
            <MudText Typo="Typo.h5" Style=@($"color:{Colors.Shades.White}")>Midwest Speedfest</MudText>
        </MudLink>*@
    <a href="#">
        <MudText Typo="Typo.h4">Midwest Speedfest</MudText>
    </a>
    <MudSpacer />
    <MudHidden Breakpoint="@Breakpoint.Xs">
        <SocialMediaIcons />
    </MudHidden>
    <MudDivider Vertical="true" Style="height: 70%" />
    <MudElement Class="ml-5">
        <LoginDisplay/>
    </MudElement>
    <MudHidden Breakpoint="@Breakpoint.Xs" Invert="true">
        <MudMenu Icon="@Icons.Material.Filled.MoreVert" Direction="Direction.Bottom" OffsetY="true" Color="Color.Inherit">
            <ChildContent>
                <SocialMediaIcons />
                <MudMenuItem>Profile</MudMenuItem>
                <MudMenuItem>My account</MudMenuItem>
                <MudMenuItem>Logout</MudMenuItem>
            </ChildContent>
        </MudMenu>
    </MudHidden>
</MudAppBar>


@code {

    [Parameter]
    public EventCallback<bool> OnDrawerToggle { get; set; }

    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
        ReturnDrawerState();
    }

    private void ReturnDrawerState()
    {
        OnDrawerToggle.InvokeAsync(_drawerOpen);
    }

}