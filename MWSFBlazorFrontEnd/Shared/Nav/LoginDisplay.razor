@using Microsoft.AspNetCore.Identity

<AuthorizeView>
    <Authorized>
        <MudMenu Direction="Direction.Start" Class="my-5" Dense="true">
            <ActivatorContent>
                <MudAvatar Variant="Variant.Outlined">
                    @context.User.Identity.Name.Substring(0, 1)
                </MudAvatar>
            </ActivatorContent>
            <ChildContent>
                <MudDivider Class="mb-2" />
                <MudListItem Text="Account" Icon="@Icons.Material.Outlined.Person" Href="/personal/account" />
                <MudListItem Text="Logout" Icon="@Icons.Material.Outlined.Login" Href="/LogOut/" />
            </ChildContent>
        </MudMenu>

    </Authorized>
    <NotAuthorized>
        <MudButton Variant="Variant.Outlined"
                   StartIcon="@Icons.Material.Filled.Login"
                   Link="/login">
            Log In
        </MudButton>
    </NotAuthorized>
</AuthorizeView>

