@inherits LayoutComponentBase

<MudLayout>
    <MudTopNavbar OnDrawerToggle="HandleDrawerToggle" DrawerOpen ="_drawerOpen"/>
    
    <MudMainContent>
        <MudContainer Class="my-5">
            @Body
        </MudContainer>
    </MudMainContent>

    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always"  Anchor="Anchor.Left" Elevation="2" >
        <MudDrawerHeader>
            <img src="Content/Images/MWSF_Logo.png" class="img-fluid" alt="Midwest Speedfest Logo">
        </MudDrawerHeader>
        <MainNavMenu />
    </MudDrawer>

</MudLayout>

@code {
    // ReSharper disable once RedundantDefaultMemberInitializer
    bool _drawerOpen = false;

    private void HandleDrawerToggle(bool result)
    {
        _drawerOpen = result;
    }
}

