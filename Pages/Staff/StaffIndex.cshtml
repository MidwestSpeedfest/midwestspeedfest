@page
@using MidwestSpeedfest.Utils.Cards
@model MidwestSpeedfest.Pages.Staff.StaffIndexModel
@{
    ViewData["Title"] = "Staff";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="display-3 text-left text-capitalize">CHOOSE YOUR STAFF MEMBER!</div>
<div class="card-deck opacity-50-dark pb-3">
    @foreach (var staff in Model.StaffDictionary)
    {
        var staffMember = staff.Value;
        var imgUrl = $"/Content/StaffBios/Logos/{@staffMember.LogoUrl}";

        <div class="card text-center select-staff-card bg-dark col-4 mt-3">
            <div class="card-img-top img-fluid">
                <a asp-page="/Staff/StaffDetails" asp-route-Name="@staff.Key">
                    <img class="select-staff-image rounded-circle" src=@imgUrl alt="@staffMember.DisplayName details page">
                </a>
            </div>
            <div class="card-body">
                <footer class="card-footer">
                    <a class="text-center h4" asp-page="/Staff/StaffDetails" asp-route-Name="@staff.Key">@staffMember.DisplayName</a>
                </footer>
            </div>
        </div>
    }
</div>

